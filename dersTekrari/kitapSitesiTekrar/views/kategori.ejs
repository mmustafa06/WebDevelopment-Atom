<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>

    <%- include("header") -%>

    <div class="container p-3">
      <h2 class="p-3">Kategori Tüm Kitaplar</h2>
      <div class="d-flex flex-wrap">
        <% for(var i = 0 ; i < books.length ; i++ ){    %>
          <div class="col-2 pb-4 text-dark">
            <a href="/kitap/<%= books[i].booksName %>/<%= books[i].id %>">
              <div class="card">
                <img height="250" src="<%= books[i].imageAdress %>" class="card-img-top">
                <div class="card-body p-2">
                  <p class="card-text text-center ">
                    <span style="text-decoration:underline"><%= books[i].booksName %></span><br />
                    <%= books[i].price  %> ₺
                  </p>
                </div>
              </div>
            </a>
          </div>
        <% }  %>
      </div>
    </div>

    <%- include("footer") -%>



    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js" integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-pQQkAEnwaBkjpqZ8RU1fF1AKtTcHJwFl3pblpTlHXybJjHpMYo79HY3hIi4NKxyj" crossorigin="anonymous"></script>
  </body>
</html>
