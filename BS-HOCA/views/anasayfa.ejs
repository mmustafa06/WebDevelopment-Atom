<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Techproed - Blog Sitesi</title>
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="/js/bootstrap.js" charset="utf-8"></script>

  </head>
  <body>

    <%- include("header") -%>



    <div class="container mt-4">
      <div class="row">
        <div class="col-lg-8 col-md-8 col-sm-12">


          <% for(var i = 0 ; i < makaleler.length ; i++){ %>
<div class="shadow p-2 mb-4 position-relative">


            <div class="mt-1">
              <a href="/yazi/<%= makaleler[i].id %>">
                <h2 class="baslik"><%= makaleler[i].baslik %></h2>
              </a>
            </div>
            <div class="row pt-2 pb-4">
              <div class="col-lg-3 col-md-3 col-sm-12 d-flex align-items-center justify-content-center">
                <img width="100%" height="auto" src="<%= makaleler[i].resim %>" alt="">
              </div>
              <div class="col-lg-9 col-md-9 col-sm-12">
                <p><%= makaleler[i].aciklama.substring(0, 450) %>...</p>
              </div>
            </div>

            <div class="devam-et">
              <a href="/yazi/<%= makaleler[i].id %>">
                Devamını Oku
              </a>
            </div>

</div>
          <% } %>


        </div>

        <div class="col-lg-4 col-md-4 col-sm-12">
          <h3 class="cok-okunanlar bg-warning text-white mb-0">Çok Okunanlar</h3>
          <ul class="list-group">

            <% for(var i = 0 ; i < cokOkunanlar.length ; i++){ %>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <a href="/yazi/<%= cokOkunanlar[i].id %>"><%= cokOkunanlar[i].baslik %></a>
                <span class="badge badge-primary badge-pill"><%= cokOkunanlar[i].okunmasayisi %></span>
              </li>
            <% } %>

          </ul>
        </div>

      </div>
    </div>


    <%- include("footer") -%>


  </body>
</html>
